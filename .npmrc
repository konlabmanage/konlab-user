# Root .npmrc for monorepo
# Shared configuration for all packages in the workspace

# Hoist dependencies to root node_modules for better compatibility
shamefully-hoist=true

# Auto-install peer dependencies
auto-install-peers=true

# Allow workspace packages to be used (important for monorepo)
prefer-workspace-packages=true

# Ignore workspace root check to allow submodules with their own configs
ignore-workspace-root-check=true

# Less strict peer dependencies (useful for monorepo with multiple React versions)
strict-peer-dependencies=false

# Public registry
registry=https://registry.npmjs.org/

